<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lmj.a2hm2.My.Add_My_ShippingAddress_City">
    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/tb_my_shipping_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"
            android:id="@+id/ic_tb_add_my_shipping_address_city_back"
            android:layout_width="wrap_content"
            android:textColor="#383838"
            android:text="@string/ic_search_back"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="新增地址"/>
    </RelativeLayout>//TB
    <TextView
        android:background="#cccccc"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="20dp"
        android:id="@+id/province" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_my_shipping_address_city_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
