<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="10dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <TextView
        android:id="@+id/receiver"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人:"/>
    <TextView
        android:layout_toRightOf="@+id/receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:id="@+id/receiver_name"
        android:text="李铭杰"/>
    <TextView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:text="@string/ic_my_shipping_address_select"
        android:visibility="invisible"
        android:id="@+id/ic_tb_my_shipping_address_select"/>
    <TextView
        android:layout_toLeftOf="@+id/ic_tb_my_shipping_address_select"
        android:id="@+id/receiver_phone"
        android:text="18906017190"
        android:textSize="18dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_above="@+id/detailed_address"
        android:id="@+id/tv_shipping_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货地址:"/>
    <TextView
        android:layout_above="@+id/detailed_address"
        android:layout_toRightOf="@+id/tv_shipping_address"
        android:id="@+id/province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="福建省"/>
    <TextView
        android:layout_above="@+id/detailed_address"
        android:layout_toRightOf="@+id/province"
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="厦门市"/>
    <TextView
        android:layout_above="@+id/detailed_address"
        android:layout_toRightOf="@+id/city"
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="集美区"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="集美街道集美大学（银江路）本部吴社区5号楼"
        android:id="@+id/detailed_address"/>
</RelativeLayout>