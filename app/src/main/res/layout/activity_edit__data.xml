<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lmj.a2hm2.My.Edit_Data">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="20dp"
            android:id="@+id/ic_tb_edit_data_back"
            android:layout_width="wrap_content"
            android:textColor="#383838"
            android:text="@string/ic_search_back"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="我的资料"/>
    </RelativeLayout>//TB
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ProgressBar
                    android:id="@+id/edit_data_progressBar"
                    android:layout_gravity="center"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progressbar_color"
                    android:layout_width="250dp"
                    android:layout_height="22dp"
                    android:max="100"
                    android:progress="50"/>
                <TextView
                    android:id="@+id/edit_data_percent"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="完整度50%"/>
            </FrameLayout>//进度条
            <TextView
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"/>//基本信息
            <RelativeLayout
                android:id="@+id/edit_data_userHead"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"/>
                <ImageView
                    android:layout_marginLeft="100dp"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user_head"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/ic_my_into"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_userHead"/>
            </RelativeLayout>//头像
            <RelativeLayout
                android:id="@+id/edit_data_background_image"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更改主页背景图"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/ic_my_into"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_background_image"/>
            </RelativeLayout>//更改主页背景图
            <RelativeLayout
                android:id="@+id/edit_data_sex"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"/>
                <TextView
                    android:layout_marginLeft="100dp"
                    android:textSize="13dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_sex" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/ic_my_into"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_sex"/>
            </RelativeLayout>//性别
            <RelativeLayout
                android:id="@+id/edit_data_birth"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"/>
                <TextView
                    android:layout_marginLeft="100dp"
                    android:textSize="13dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_birth" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/ic_my_into"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_birth"/>
            </RelativeLayout>//生日
            <RelativeLayout
                android:id="@+id/edit_data_address"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常住"/>
                <TextView
                    android:layout_marginLeft="100dp"
                    android:textSize="13dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_address" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/ic_my_into"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_address"/>
            </RelativeLayout>//常住
            <RelativeLayout
                android:id="@+id/edit_data_shipping_address"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址"/>
                <TextView
                    android:layout_marginLeft="100dp"
                    android:textSize="13dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_shipping_address" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/ic_my_into"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_shipping_address"/>
            </RelativeLayout>//收货地址
            <RelativeLayout
                android:id="@+id/edit_data_resume"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textColor="#333333"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简介"/>
                <TextView
                    android:layout_marginLeft="100dp"
                    android:textSize="13dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_resume" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:textSize="15dp"
                    android:layout_centerVertical="true"
                    android:text="@string/ic_my_into"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_resume"/>
            </RelativeLayout>//个人简介
            <TextView
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我喜欢"/>//我喜欢
            <RelativeLayout
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/edit_data_i_like"
                    android:layout_centerVertical="true"
                    android:layout_width="55dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="+"
                    android:background="@drawable/shape_edit_like"/>
            </RelativeLayout>//我喜欢
            <TextView
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份信息"/>//身份信息
            <RelativeLayout
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_ID_card_verified"
                    android:textSize="20dp"
                    android:text="@string/ic_edit_data_ID_card_verified"/>
                <TextView
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/ic_edit_data_ID_card_verified"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实人认证"
                    android:textSize="15dp"/>
                <TextView
                    android:background="#FEDB43"
                    android:id="@+id/edit_data_ID_card_verified"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:text="认证"/>
            </RelativeLayout>//身份认证
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_mobilePhone_verified"
                    android:textSize="20dp"
                    android:text="@string/ic_edit_data_mobilePhone_verified"/>
                <TextView
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/ic_edit_data_mobilePhone_verified"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机认证"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/edit_data_mobilePhone_verified"
                    android:gravity="center"
                    android:background="#FEDB43"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:text="认证"/>
            </RelativeLayout>//手机认证
            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:layout_marginTop="0.5dp"
                android:background="#ffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_edit_data_email_verified"
                    android:textSize="20dp"
                    android:text="@string/ic_edit_data_email_verified"/>
                <TextView
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/ic_edit_data_email_verified"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱认证"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/edit_data_email_verified"
                    android:gravity="center"
                    android:background="#FEDB43"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="26dp"
                    android:text="认证"/>
            </RelativeLayout>//邮箱认证
        </LinearLayout>
    </ScrollView>
</LinearLayout>
